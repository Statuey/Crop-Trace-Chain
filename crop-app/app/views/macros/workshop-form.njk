{% macro workshopForm(result,status,cropId) %}
<form action="" method="post">
  <div class="field">
    <label class="label">车间名</label>
    <div class="control">
      <input class="input" name="workshopname" type="text" value="{{ result.workshopName }}" {{ status }} />
    </div>
  </div>

  <div class="field">
    <label class="label">车间设立时间</label>
    <div class="control">
      <input class="input" name="foundtime" type="text" value="{{ result.foundTime }}" {{ status }}/>
    </div>
  </div>

  <div class="field">
    <label class="label">负责人名</label>
    <div class="control">
      <input class="input" name="leadername" type="text" value="{{ result.leaderName }}" {{ status }}/>
    </div>
  </div>

  <div class="field">
    <label class="label">负责人联系电话</label>
    <div class="control">
      <input class="input" name="leadertel" type="text" value="{{ result.leaderTel}}" {{ status }}/>
    </div>
  </div>

 {% if cropId %}
    <div class="control">
    </div>
  {% elif status %}
    <div class="control">
      <a href="/dashboard/members" class="button is-link">返回</a>
    </div>
  {% else %}
  <div class="field is-grouped">
    <div class="control">
      <button type="submit" class="button is-link">确定</button>
    </div>
    <div class="control">
      <button type="reset" class="button is-link is-light">取消</button>
    </div>
  </div>
  {% endif %}
</form>
{% endmacro %}