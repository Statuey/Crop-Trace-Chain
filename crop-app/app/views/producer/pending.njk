{% extends "layouts/producer.njk" %}

{% block content %}
  <div class="container">
    <section class="section">
      <h1 class="title is-3">待处理订单</h1>
      <h2 class="subtitle mb-6">pending</h2>
      <h2 class="title is-4">未创建生长状况：</h2>
      <div class="table-container">
        <table class="table is-fullwidth is-hoverable ">
          <thead>
            <tr>
              <th>作物订单号</th>
              <th>作物名</th>
              <th>创建时间</th>
              <th>操作
            </tr>
          </thead>
          <tbody>
            {% for set in sets2 %}
              <tr>
                <th>
                  <a href="crops/{{set.crop_id}}">
                    <span class="icon">
                      <i class="fas fa-book" aria-hidden="true"></i>
                    </span>
                    <span>#{{ set.crop_id }}</span>
                  </a>
                </th>
                <td>
                  <span class="has-text-grey-dark">{{ set.plant_name }}</span>
                </td>
                <td>
                  <span class="has-text-grey-dark">{{ set.create_time }}</span>
                </td>
                <td>
                  <a href="create/{{set.crop_id}}">
                    <span>创建生长档案</span>
                  </a>              
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </section>
    <section class="section">
      <h2 class="title is-4">未发往下一级：</h2>
      <div class="table-container">
        <table class="table is-fullwidth is-hoverable ">
          <thead>
            <tr>
              <th>作物订单号</th>
              <th>记录时间</th>
              <th>记录人</th>
              <th>操作<th>
            </tr>
          </thead>
          <tbody>
            {% for set in sets1 %}
              <tr>
                <th>
                  <a href="{{set.grow_id}}">
                    <span class="icon">
                      <i class="fas fa-book" aria-hidden="true"></i>
                    </span>
                    <span>#{{ set.crop_id }}</span>
                  </a>
                </th>
                <td>
                  <span class="has-text-grey-dark">{{ set.record_time }}</span>
                </td>
                <td>
                  <span class="has-text-grey-dark">{{ set.farmer_name }}</span>
                </td>
                <td>
                  <a href="/dashboard/pending/{{set.crop_id}}/transaction">
                    <span>交易</span>
                  </a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </section>
  </div>
{% endblock %}
